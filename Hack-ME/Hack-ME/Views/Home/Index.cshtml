@{
    ViewData["Title"] = "Home Page";
}
<img id="hackme-logo" src="hackme.png"></img>
<div id="center_wrapper">
    <h1 id="name">QR Attendance</h1>
    <button id="sign" class="btn btn-default center-button">Sign in</button>
    <button id="register" class="btn btn-default center-button">Register</button>
</div>
<p id="creators">By Liam Jacquet, Wade Wahlig, and Ryan Britton</p>
@section Styles {
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">

    <style>
        html, body {
            padding: 0;
            margin: 0;
            height: 100%;
            width: 100%;
        }

        * {
            font-family: 'Open Sans', sans-serif;
        }

        @@keyframes cycle-bg {
            0%, 100% {
                background-color: #EF9A9A;
            }

            20% {
                background-color: #C5E1A5;
            }

            40% {
                background-color: #80DEEA;
            }

            60% {
                background-color: #9FA8DA;
            }

            80% {
                background-color: #CE93D8;
            }
        }

        h1, #creators {
            color: #fff;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
        }

        #hackme-logo {
            position: absolute;
            top: 0;
            right: 0;
            display: block;
            width: 200px;
            height: 200px;
        }

        #center_wrapper {
            position: absolute;
            top: 40%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .center-button {
            display: block;
            margin: 30px auto;
            width: 100px;
        }

        #creators {
            position: absolute;
            bottom: 0;
            right: 0;
            margin: 20px;
        }
    </style>
}

@section Scripts{
    <script>
        document.body.style.animation = `cycle-bg 20s linear ${Math.random() * -20}s infinite`;
    </script>
}