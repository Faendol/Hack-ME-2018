@model ExternalLoginViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>Finish Creating Your Account</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="radio">
                    @Html.RadioButtonFor(e => e.TeacherorStudent, 0)
                    <label>Student</label>
                </div>
                <div class="radio">
                    @Html.RadioButtonFor(e => e.TeacherorStudent, 1)
                    <label>Teacher</label>
                </div>
            </div>
            <button type="submit" class="btn btn-default">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
